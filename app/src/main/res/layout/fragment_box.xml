<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.myapplication.BoxFragment">

    <!-- Перший блок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C7DCED"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="106dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shtudel"
            app:srcCompat="@drawable/shtudel" />

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Штрудель курятина,гриби,сир" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Час приготування:120хв" />
        </LinearLayout>

        <Button
            android:id="@+id/shtrudel_button"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:background="@color/black"
            android:text="Деталі" />
    </LinearLayout>
    <!-- Другий блок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C7DCED"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="106dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/crambl"
            app:srcCompat="@drawable/crambl" />

        <!-- LinearLayout в середині -->
        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Яблучний крамбл" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Час приготування:80хв" />
        </LinearLayout>

        <!-- Button -->
        <Button
            android:id="@+id/crambl_button"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:background="@color/black"
            android:text="Деталі" />
    </LinearLayout>

    <!-- Третій блок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C7DCED"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="106dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pancakes"
            app:srcCompat="@drawable/pancakes" />

        <!-- LinearLayout в середині -->
        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Панкейки зі шпинатом" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Час приготування: 30 хв" />
        </LinearLayout>

        <!-- Button -->
        <Button
            android:id="@+id/pancakes_button"
            android:layout_width="wrap_content"
            android:layout_height="91dp"
            android:background="@color/black"
            android:text="Деталі" />
    </LinearLayout>

</LinearLayout>